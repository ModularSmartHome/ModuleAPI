<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <!-- Identifier that must be unique within the hosting gallery -->
        <id>ModularSmartHome.ModuleAPI</id>

        <!-- Package version number that is used when resolving dependencies -->
        <version>0.1.0</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>Mathis Burger</authors>

        <!-- 
            Owners are typically nuget.org identities that allow gallery
            users to easily find other packages by the same owners.  
        -->
        <owners>Mathis Burger</owners>

        <!-- Project URL provides a link for the gallery -->
        <projectUrl>https://github.com/ModularSmartHome/ModuleAPI</projectUrl>

        <!-- 
            If true, this value prompts the user to accept the license when
            installing the package. 
        -->
        <requireLicenseAcceptance>false</requireLicenseAcceptance>

        <!-- 
            The description can be used in package manager UI. Note that the
            nuget.org gallery uses information you add in the portal. 
        -->
        <description>Provides core API for building modules for the ModularSmartHome application</description>

        <!-- Dependencies are automatically installed when the package is installed -->
        <dependencies>
            <dependency id="Newtonsoft.Json" version="9.0" />
            <dependency id="Microsoft.EntityFrameworkCore" version="6.0.9" />
            <dependency id="Microsoft.EntityFrameworkCore.Relational" version="6.0.9" />
            <dependency id="Microsoft.EntityFrameworkCore.Relational.Design" version="1.1.6" />
            <dependency id="Npgsql.EntityFrameworkCore.PostgreSQL" version="6.0.6" />
            <dependency id="Npgsql.EntityFrameworkCore.PostgreSQL.Design" version="1.1.0" />
            <dependency id="Swashbuckle.AspNetCore" version="6.2.3" />
        </dependencies>
    </metadata>
</package>